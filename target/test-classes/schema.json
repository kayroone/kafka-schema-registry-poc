{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "My Kafka Message",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "oneOf": [
        { "type": "null", "title": "Not included" },
        { "type": "string" }
      ]
    },
    "message": {
      "oneOf": [
        { "type": "null", "title": "Not included" },
        { "type": "string" }
      ]
    },
    "version": {
      "type": "integer",
      "minimum": 1
    }
  },
  "required": ["version"]
}